{
  "manifest_version": 3,
  "name": "YouTube Transcription",
  "version": "1.0",
  "description": "Transcrit les vid√©os YouTube avec Gladia",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/@*/videos",
        "https://www.youtube.com/c/*/videos",
        "https://www.youtube.com/channel/*/videos",
        "https://www.youtube.com/user/*/videos",
        "https://www.youtube.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 